<h1>投稿の一覧</h1>
<ul class="notes">
  <% @notes.each do |note| %>
       <li>
     <%= image_for(note.user) %>
     <span class="user-name">
      <%= note.user.name %>
      </span>
      <span class="content">
        <%= link_to note.title, note_path(note.id) %>

      <div>
  <small>
    <!-- 投稿がいいね！されている数を表示してください -->
    <%= note.likes.count %>人がいいねといっています
  </small>
</div>
      </span>
      <span>
    <%= note.created_at.strftime("%Y-%m-%d %H:%M:%S") %>
  </span>
    </li>
  <% end %>

</ul>
