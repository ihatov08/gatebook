<p id="notice" class="alert alert-success"><%= notice %></p>

<aside class="sidebar">
  <section>
    <span class="label">プロフィール画像</span>
    <h3 class="user-info">
      <!-- ここでimage_forヘルパーを呼び出してください -->
      <%= image_for(@user) %>
    </h3>
  </section>
  <section>
    <span class="label">ユーザー</span>
    <h3 class="user-info"><%= @user.name %></h3>
  </section>

  <section>
    <span class="label">メールアドレス</span>
    <h3 class="user-info"><%= @user.email %></h3>
  </section>

  <!-- countメソッドを用いて、ユーザーのいいね！している数を表示してください -->
  <%= @user.likes.count %>個の投稿にいいね!しています

  <% if current_user?(@user) %>
  <section>
    <small><%= link_to 'プロフィールを編集', edit_user_path(@user) %></small>
  </section>
  <% end %>

</aside>

<ul class="notes">
 <% @notes.each do |note| %>
  <%= render @notes %>
 <% end %>
</ul>
